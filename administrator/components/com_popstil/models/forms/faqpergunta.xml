<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="detalhes_faqpergunta">
		<field 
			name="id"
			type="hidden"
		/>
		<field 
			name="titulo"
			type="text"
			class="inputbox"
			label="Titulo do faq"
			description="Titulo do faq"
			size="40"
			default=""
			required="true"
		/>
		<field 
			name="texto"
			type="editor"
			label="Titulo do faq"
			description="Titulo do faq"
			filter="safehtml"
		/>
		<field
			name="ativo"
			type="radio"
			class="radio btn-group"
			label="Mostrar slider?"
			default="1"
			description="Se o slider sera mostrado ou não na apresentação"
		>
			<option value="1">Sim</option>
			<option value="0">Não</option>
		</field>
	</fieldset>
</form>
