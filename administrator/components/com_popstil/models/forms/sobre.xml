<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="detalhes_sobre">
		<field 
			name="id"
			type="hidden"
		/>
		<field 
			name="titulo"
			type="text"
			class="inputbox"
			label="Titulo do item"
			description="Titulo do item"
			size="40"
			default=""
			required="true"
		/>
		<field 
			name="texto"
			type="editor"
			label="Descrição"
			description="Descrição do item"
			filter="safehtml"
		/>
		<field
			name="ativo"
			type="radio"
			class="radio btn-group"
			label="Mostrar item?"
			default="1"
			description="Se o item sera mostrado ou não na pagina"
		>
			<option value="1">Sim</option>
			<option value="0">Não</option>
		</field>
	</fieldset>
</form>
