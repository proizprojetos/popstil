<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fieldset name="default"
		label="COM_POPSTIL_REGISTRATION_DEFAULT_LABEL" >
		
		<field name="id" 
			type="text"
			label="COM_POPSTIL_REGISTER_ID_LABEL"
			message="COM_POPSTIL_REGISTER_ID_MESSAGE"
			size="11" />
			
		
		<field name="nomecompleto" 
			type="text"
			description="COM_POPSTIL_NOME"
			filter="nome"
			label="COM_POPSTIL_REGISTER_NOME_LABEL"
			message="COM_POPSTIL_REGISTER_NOME_MESSAGE"
			required="true"
			size="45" />
			
		<field name="cpf"
			type="text" 
			description="COM_POPSTIL_CPF"
			filter="cpf"
			label="COM_POPSTIL_REGISTER_CPF_LABEL"
			message="COM_POPSTIL_REGISTER_CPF_MESSAGE"
			required="true"
			size="11" />
			
		<field name="datanascimento"
			type="calendar"
			label="COM_POPSTIL_REGISTER_DATANASCIMENTO_LABEL"
			message="COM_POPSTIL_REGISTER_DATANASCIMENTO_MESSAGE"
			format="$d-%m-%Y"
			required="true"
			/>
		<field name="sexo"
			type="text"
			label="COM_POPSTIL_REGISTER_SEXO_LABEL"
			message="COM_POPSTIL_REGISTER_SEXO_MESSAGE"
			default="M"
			required="true"
			size="1 "/>
			
		<field name="ddd1"
			type="text"
			label="COM_POPSTIL_REGISTER_DDD1_LABEL"
			message="COM_POPSTIL_REGISTER_DDD1_MESSAGE"
			required="true"
			size="3" />
		<field name="telefone1"
			type="text"
			label="COM_POPSTIL_REGISTER_TELEFONE1_LABEL"
			message="COM_POPSTIL_REGISTER_TELEFONE1_MESSAGE"
			required="true"
			size="10" />
			
		<field name="ddd2"
			type="text"
			label="COM_POPSTIL_REGISTER_DDD2_LABEL"
			message="COM_POPSTIL_REGISTER_DDD2_MESSAGE"
			size="3" />
		<field name="telefone2"
			type="text"
			label="COM_POPSTIL_REGISTER_TELEFONE2_LABEL"
			message="COM_POPSTIL_REGISTER_TELEFONE2_MESSAGE"
			size="10" />
			
		<field name="username"
			type="text"
			label="COM_POPSTIL_REGISTER_USERNAME_LABEL"
			message="COM_POPSTIL_REGISTER_UNSERNAME_MESSAGE"
			required="true"
			size="50" />
		<field name="password"
			type="text"
			label="COM_POPSTIL_REGISTER_PASSWORD_LABEL"
			message="COM_POPSTIL_REGISTER_PASSWORD_MESSAGE"
			required="true"
			size="80" />
			
		<field
			name="enviaremail"
			type="radio"
			default="0"
			class="btn-group"
			label="COM_USERS_USER_FIELD_ENVIAREMAIL_LABEL"
			description="COM_USERS_USER_FIELD_ENVIAREMAIL_DESC">				
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		<field name="dataregistro"
			type="calendar"
			label="COM_POPSTIL_REGISTER_DATAREGISTRO_LABEL"
			message="COM_POPSTIL_REGISTER_DATAREGISTRO_MESSAGE"
			format="$d-%m-%Y"/>
		
	</fieldset>
</form>