<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fieldset name="default"
		label="COM_POPSTIL_REGISTRATION_DEFAULT_LABEL" >
		
		<field name="id" 
			type="text"
			label="COM_POPSTIL_REGISTER_ID_LABEL"
			message="COM_POPSTIL_REGISTER_ID_MESSAGE"
			size="11" />
			
		<field name="popstil_usuario_idusuario" 
			type="text"
			label="COM_POPSTIL_REGISTER_IDUSUARIO_LABEL"
			message="COM_POPSTIL_REGISTER_IDUSUARIO_MESSAGE"
			size="11" />
					
		<field name="cep" 
			type="text"
			description="COM_POPSTIL_CEP"
			filter="cep"
			label="COM_POPSTIL_REGISTER_CEP_LABEL"
			message="COM_POPSTIL_REGISTER_CEP_MESSAGE"
			required="true"
			size="10" />
			
		<field name="endereco"
			type="text" 
			description="COM_POPSTIL_ENDERECO"
			filter="endereco"
			label="COM_POPSTIL_REGISTER_ENDERECO_LABEL"
			message="COM_POPSTIL_REGISTER_ENDERECO_MESSAGE"
			required="true"
			size="120" />
			
		<field name="numero"
			type="text"
			label="COM_POPSTIL_REGISTER_NUMERO_LABEL"
			message="COM_POPSTIL_REGISTER_NUMERO_MESSAGE"
			required="true"
			size="5"
			/>
		<field name="complemento"
			type="text"
			label="COM_POPSTIL_REGISTER_COMPLEMENTO_LABEL"
			message="COM_POPSTIL_REGISTER_COMPLEMENTO_MESSAGE"
			required="true"
			/>
			
		<field name="bairro"
			type="text"
			label="COM_POPSTIL_REGISTER_BAIRRO_LABEL"
			message="COM_POPSTIL_REGISTER_BAIRRO_MESSAGE"
			required="true"
			size="40"
		 />
		<field name="cidade"
			type="text"
			label="COM_POPSTIL_REGISTER_CIDADE_LABEL"
			message="COM_POPSTIL_REGISTER_CIDADE_MESSAGE"
			required="true"
			size="40" />
			
		<field name="estado"
			type="text"
			label="COM_POPSTIL_REGISTER_ESTADO_LABEL"
			message="COM_POPSTIL_REGISTER_ESTADO_MESSAGE"
			size="30" />

		<field name="pais"
			type="text"
			label="COM_POPSTIL_REGISTER_PAIS_LABEL"
			message="COM_POPSTIL_REGISTER_PAIS_MESSAGE"
			size="30"
			default="BR" />
	</fieldset>
</form>